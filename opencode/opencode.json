{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest",
        "--autoConnect"
      ],
      "enabled": true
    }
  },
  "autoupdate": false,
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
      "*credentials*": "deny",
      "*secrets*": "deny",
      "*.pem": "deny",
      "*.key": "deny",
      "*_rsa": "deny",
      "*_dsa": "deny",
      "*_ecdsa": "deny",
      "*_ed25519": "deny",
      "*.p12": "deny",
      "*.pfx": "deny",
      "*.keystore": "deny"
    }
  },
  "theme": "system",
  "share": "disabled",
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "provider": {
    "lmstudio": {
      "models": {
        "qwen/qwen3-coder-30b": {
          "name": "Qwen3 Coder (l)"
        },
        "zai-org/glm-4.6v-flash": {
          "name": "GLM-4.6 flash (l)"
        }
      },
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:1234/v1"
      },
      "name": "LM Studio"
    }
  }
}
