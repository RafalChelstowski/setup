{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest", "--autoConnect"],
      "environment": {
        "ZK_DIR": "/Users/rafalchelstowski/md"
      },
      "enabled": true
    },
    "zk": {
      "type": "local",
      "command": [
        "uv",
        "--directory",
        "/Users/rafalchelstowski/.local/share/zk-mcp/",
        "run",
        "server.py"
      ],
      "environment": {
        "ZK_DIR": "/Users/rafalchelstowski/md"
      },
      "enabled": true
    }
  },
  "autoupdate": false,
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
      "*credentials*": "deny",
      "*secrets*": "deny",
      "*.pem": "deny",
      "*.key": "deny",
      "*_rsa": "deny",
      "*_dsa": "deny",
      "*_ecdsa": "deny",
      "*_ed25519": "deny",
      "*.p12": "deny",
      "*.pfx": "deny",
      "*.keystore": "deny"
    },
    "skill": {
      "*": "ask",
      "three-best-practices": "allow",
      "webgpu-threejs-tsl": "allow",
      "vercel-react-best-practices": "allow",
      "jira-analysis": "allow",
      "zk-notes": "allow"
    }
  },
  "theme": "system",
  "share": "disabled",
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "provider": {
    "lmstudio": {
      "models": {
        "qwen/qwen3-coder-30b": {
          "name": "Qwen3 Coder (l)"
        },
        "zai-org/glm-4.7-flash": {
          "name": "GLM-4.7 flash (l)"
        }
      },
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:1234/v1"
      },
      "name": "LM Studio"
    }
  }
}
